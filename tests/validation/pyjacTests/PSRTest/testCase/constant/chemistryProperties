FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

chemistryType
{
    solver          ode_LAPACK;
    method          loadBalanced_pyJac;
}

chemistry       on;

initialChemicalTimeStep 1e30; // - should not influence ODE stability if all good.

odeCoeffs
{
    solver          seulex_LAPACK;
    absTol          1e-12;
    relTol          1e-12;
}

loadbalancing
{
    log     false;
}

refmapping{}

reactions
{}

